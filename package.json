{
  "name": "evermark",
  "version": "0.5.0",
  "description": "A command line tool for syncing markdown files to Evernote.",
  "keywords": [
    "command",
    "evernote",
    "markdown"
  ],
  "author": "Weijia Huang <ihuangwj@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akuma/evermark"
  },
  "bin": {
    "evermark": "bin/evermark"
  },
  "main": "src/evermark.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && babel src -d lib",
    "prepublish": "npm run build",
    "lint": "eslint src/*.js src/**/*.js --quiet --fix",
    "validate": "npm run lint && npm outdated --depth 0",
    "test": "nyc --reporter=lcov --reporter=text ava test/*.js",
    "test:watch": "npm test -- --watch"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "bluebird": "^3.4.1",
    "chalk": "^1.1.3",
    "cheerio": "^0.20.0",
    "co": "^4.6.0",
    "commander": "^2.9.0",
    "debug": "^2.2.0",
    "evernote": "^1.25.82",
    "fs-extra": "^0.30.0",
    "highlight.js": "^9.5.0",
    "inline-css": "^2.2.2",
    "markdown-it": "^7.0.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "ora": "^0.2.3",
    "warehouse": "^2.2.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "coveralls": "^2.11.11",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^3.0.1",
    "eslint-config-airbnb-base": "^4.0.0",
    "eslint-plugin-import": "^1.10.2",
    "ghooks": "^1.3.2",
    "nyc": "^7.0.0",
    "rimraf": "^2.5.3",
    "sinon": "^1.17.4",
    "validate-commit-message": "^3.0.1"
  },
  "files": [
    "bin",
    "lib",
    "src",
    "test",
    "themes",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint && npm test",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "\nPlease fix your commit message (see http://npm.im/commitizen)\n",
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "custom"
      ]
    }
  },
  "engines": {
    "node": ">=4.0"
  },
  "ava": {
    "failFast": true,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
