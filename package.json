{
  "name": "evermark",
  "version": "0.2.1",
  "description": "A command line tool for syncing markdown files to Evernote.",
  "keywords": [
    "command",
    "evernote",
    "markdown"
  ],
  "author": "Weijia Huang <ihuangwj@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akuma/evermark"
  },
  "bin": {
    "evermark": "./bin/evermark"
  },
  "main": "./src/evermark.js",
  "scripts": {
    "build": "babel src -d ./lib",
    "prepublish": "npm test; npm run build",
    "lint": "eslint ./src/*.js ./src/**/*.js --quiet --fix",
    "validate": "npm run lint; npm outdated --depth 0",
    "test": "ava",
    "watchtest": "npm test -- --watch",
    "report": "nyc --reporter=lcov --reporter=text npm test"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "bluebird": "^3.4.0",
    "chalk": "^1.1.3",
    "co": "^4.6.0",
    "commander": "^2.9.0",
    "debug": "^2.2.0",
    "evernote": "^1.25.82",
    "fs-extra": "^0.30.0",
    "highlight.js": "^9.4.0",
    "inline-css": "^2.2.2",
    "remarkable": "^1.6.2",
    "warehouse": "^2.2.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "coveralls": "^2.11.9",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^2.11.1",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.1",
    "ghooks": "^1.2.1",
    "nyc": "^6.6.1",
    "validate-commit-message": "^3.0.1"
  },
  "files": [
    "bin",
    "lib",
    "src",
    "test",
    "themes",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint; npm run test",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "\nPlease fix your commit message (see http://npm.im/commitizen)\n",
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "custom"
      ]
    }
  },
  "engines": {
    "node": ">=4.0"
  },
  "ava": {
    "failFast": true,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
